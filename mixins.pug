mixin headingCenter(heading,title)
    h6.heading.heading-center= heading
    h2.title.title-center= title
mixin heading(heading,title)
    h6.heading.wow.animate__fadeInUp.animate__delay-0.5s(data-wow-delay="0.5s")= heading
    h2.title.wow.animate__fadeInUp.animate__delay-1s(data-wow-delay="1s")= title

mixin servicesItem(img,title,decs)
    article.services__item 
        figure.services__item--img
            img(src= img, alt="...")
        h3.services__item--title= title
        p.services__item--decs= decs

mixin numberItem(data)
    article.number__item 
        span.number__icon
            i(class= data.icon)
        div.number__counter
            span.number__counter--digital.counter= data.num
            span.number__counter--text= data.text 
        p.number__statistic= data.statistic

mixin featuresItem(icon,subject,decs)
    div.features__item
        div.features__item-left
            span.features__icon
                i(class= icon)
        div.features__item-right
            h3.features__subject= subject
            p.features__decs= decs 

mixin portfolioOverlay(image)
    div.portfolio__icon
        a.lightimg(href= "#!", data-exthumbimage= image data-src= image)
            i.la.la-plus
    div.portfolio__overlay
    span.portfolio__text
        h5.portfolio__text-title Software Landing
        p.portfolio__text-decs By Jhone Doe

