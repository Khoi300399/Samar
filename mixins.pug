mixin clientsItem(image)
    div.swiper-slide    
        div.clients__item
            div.clients__pic
                img(src= image, alt="...")
                div.clients__extra
mixin articlesItem(name,position,text)
    article.swiper-slide     
        div.articles__item
            div.articles__content
                h3.articles__name= name
                span.articles__position
                    i= position
                p.articles__text= text

mixin blogsItem(image,title,decs,date,author)
    article.blogs__item 
        figure.blogs__img 
            img(src= image, alt="...")
        div.blogs__info
            h3.blogs__title= title
            p.decs= decs
            ul.blogs__meta 
                li.blogs__meta-date= date
                li.blogs__meta-author
                    i.las.la-user-circle
                    p
                        span By 
                        = author

mixin logoItem(img1,img2)
    div.brand__item
        div.logo-container
            img(src= img1, alt="..." class="logo-main")
            img(src= img2, alt="..." class="logo-hover")

